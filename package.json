{
  "name": "sitedesign-schema",
  "displayName": "sitedesign-schema",
  "description": "Generate extended schema for SiteScript actions",
  "version": "1.0.0",
  "publisher": "schaeflein",
  "icon": "./media/icon.png",
  "galleryBanner": {
    "color": "#5B8726",
    "theme": "light"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/pschaeflein/vscode-spsd-schema"
  },
  "engines": {
    "vscode": "^1.47.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "SharePoint",
    "Site Design",
    "Site Scripts"
  ],
  "activationEvents": [
    "workspaceContains:**/*.sitescript.json",
    "onCommand:sitedesign-schema.refreshSchema"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "sitedesign-schema.refreshSchema",
        "title": "SiteDesign: Refresh local schema"
      }
    ],
    "jsonValidation": [
      {
        "fileMatch": "*.sitescript.json",
        "url": "./sitescript.schema.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "lint": "eslint src --ext ts",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.47.0",
    "@types/glob": "^7.1.1",
    "@types/mocha": "^7.0.2",
    "@types/node": "^13.11.0",
    "eslint": "^6.8.0",
    "@typescript-eslint/parser": "^2.30.0",
    "@typescript-eslint/eslint-plugin": "^2.30.0",
    "glob": "^7.1.6",
    "mocha": "^7.1.2",
    "typescript": "^3.8.3",
    "vscode-test": "^1.3.0"
  },
  "dependencies": {
    "chalk": "^4.1.0",
    "json-schema-ref-parser": "^9.0.3"
  }
}
